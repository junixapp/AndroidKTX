<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lxj.androidktx.widget.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="有新版本更新啦！"
            android:textColor="#555"
            android:textSize="17sp"
            android:textStyle="bold"
            app:stv_bottomLineColor="#eee"
            app:stv_lineSize=".5dp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.lxj.androidktx.widget.ShapeTextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:textColor="#333"
                android:textSize="15sp" />
        </androidx.core.widget.NestedScrollView>

        <com.lxj.androidktx.widget.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            app:sll_lineSize=".6dp"
            app:sll_topLineColor="#eee">

            <com.lxj.androidktx.widget.ShapeTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#4C536D"
                android:textSize="16sp"
                app:stv_enableRipple="true"
                app:stv_solid="#fff" />

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:background="#eee" />

            <com.lxj.androidktx.widget.ShapeTextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="安装新版本"
                android:textColor="#3070FF"
                android:textSize="16sp"
                app:stv_enableRipple="true"
                app:stv_solid="#fff" />
        </com.lxj.androidktx.widget.ShapeLinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>